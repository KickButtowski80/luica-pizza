<div class="jumbotron" style="margin:20px; margin-top:15%; border-radius:5px">
    <div class="row" style=" margin: 0 auto;"> 
        <form id='form' class="col-xs-12 col-md-12 box" >
            <h2>Daily Lunch</h2>
              <% LunchMenuConfig.current_menu.each do |item,content| %> 
                <div class="top">
                    <%=item%>
                    <span class="pull-right" style="color: gray;">v</span>
                </div>
                <div class="bottom" >
                     <div class="well">
                  <% content.each do |subject,detail| %>
                   <input type="checkbox" name="menItems" onclick="myFunction(this)" 
            value="<%= subject["name"] %>&nbsp;&nbsp;&nbsp;&nbsp;<%= subject["price"] %>">
                        <span class="box-nip">
                            <%= subject["name"] %>
                        </span>
                        <br>
                        <% unless subject["ingredients"].nil?  %>
                            <%= subject["ingredients"]%>
                            <%= tag(:br) %>
                        <%end%>
                        <%= number_to_currency(subject["price"]) %><br>
                   <%end%>
                   </div>
                </div>
                 <%end%>  
          </form>  
     </div>
 </div> 
